<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
    <timestamp key="timestamp" datePattern="yyyy-MM-dd"/>
    <appender name="dailyRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/vcap/sys/log/paas-ta-portal-webadmin/paas-ta-portal-webadmin.${timestamp}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>paas-ta-portal-webadmin.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>

        <encoder>
            <pattern>%d{yyyy:MM:dd HH:mm:ss.SSS} %-5level --- [%thread] %logger{35} : %msg %n</pattern>
        </encoder>
    </appender>

    <logger name="org.openpaas.paasta.portal.web.admin" level="DEBUG"/>

    <root level="DEBUG">
        <appender-ref ref="dailyRollingFileAppender"/>
    </root>
</configuration>

